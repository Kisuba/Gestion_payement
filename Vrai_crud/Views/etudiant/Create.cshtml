@model Vrai_crud.Models.etudiant

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                

                <label class="control-label"></label>
                <select asp-for="idfaculte" class="form-control" asp-items="@ViewBag.typefaculte" required>
                    <option value="">Selectionner le faculté</option>

                </select>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <select asp-for="idpromotion" class="form-control" asp-items="@ViewBag.typepromotion" required>
                    <option value="">Selectionner la prommtion</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="noms" class="control-label"></label>
                <input asp-for="noms" class="form-control" required/>
                <span asp-validation-for="noms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prenom" class="control-label"></label>
                <input asp-for="prenom" class="form-control" required/>
                <span asp-validation-for="prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nomrespo" class="control-label"></label>
                <input asp-for="nomrespo" class="form-control" />
                <span asp-validation-for="nomrespo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="contactresp" class="control-label"></label>
                <input asp-for="contactresp" class="form-control" />
                <span asp-validation-for="contactresp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datenaiss" class="control-label"></label>
                <input type="date" asp-for="datenaiss" class="form-control" />
                <span asp-validation-for="datenaiss" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sexe" class="control-label"></label>
                <select asp-for="sexe" class="form-control">
                    <option value="m">Masculin</option>
                    <option value="f">Féminin</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="contact" class="control-label"></label>
                <input asp-for="contact" class="form-control" />
                <span asp-validation-for="contact" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="photo" class="control-label"></label>
                <input  type="file" name="fichier" id="fichier" class="form-control-file" required/>
                <span asp-validation-for="photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adressemail" class="control-label"></label>
                <input asp-for="adressemail" class="form-control" />
                <span asp-validation-for="adressemail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresse" class="control-label"></label>
                <input asp-for="adresse" class="form-control" />
                <span asp-validation-for="adresse" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listes des étudiants</a>
</div>

