@model Vrai_crud.Models.Payement

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="card shadow mb-4">
    
    <hr />
    <dl class="row" style="text-align:center;">

        <dt class="col-sm-2">
            Matricule :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.matricule)
        </dd>
        <dt class="col-sm-2">
            Noms :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.noms)
        </dd>

        <dt class="col-sm-2">
            Faculté :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.faculte)
        </dd>
        <dt class="col-sm-2">
            Promotion :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.promotion)
        </dd>
        <dt class="col-sm-2">
            Total :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.montant) $
        </dd>
        <dt class="col-sm-2">
            Reste à payer :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.reste) $
        </dd>
    </dl>
</div>
<div>
    
    <a asp-action="Index"  class="btn btn-default">Liste de payement</a>
</div>
