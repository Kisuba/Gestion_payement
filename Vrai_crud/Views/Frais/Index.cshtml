@model IEnumerable<Vrai_crud.Models.Frais>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Les Frais</h1>
<p>
    <a asp-action="Create" class="btn btn-success">ajouter</a>
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Les utlisateurs</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>
                            Faculté
                        </th>
                        <th>
                            Promotion
                        </th>
                        <th>
                            Inscription
                        </th>
                        <th>
                            1er Tranche
                        </th>
                        <th>
                            2e Tranche
                        </th>
                        <th>
                            3e Tranche
                        </th>
                        <th>
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.faculte)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.promotion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.inscritpion) $
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.t1) $
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.t2) $
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.t3) $
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-primary" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>